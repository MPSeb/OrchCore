<!DOCTYPE html>
<html lang="@Orchard.CultureName()">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@RenderTitleSegments(Site.SiteName, "before")</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    @await RenderSectionAsync("HeadMeta", required: false)
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: #FFFFFF; color: #2ECC71;">

    <header class="text-center py-5">
        <h1 style="font-size: 3rem; margin-bottom: 0.5rem;">@Site.SiteName</h1>
        <p style="font-size: 1.5rem; color: #A3E4A3;">Welcome to my Orchard Core site!</p>
    </header>


    <nav class="navbar navbar-expand-md fixed-top bg-primary">
        <div class="container">
            <a class="navbar-brand text-green" href="/">@Site.SiteName</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <menu alias="alias:main-menu" />
            </div>
        </div>
    </nav>

    <main class="container" style="margin-top:20px;">
        @await RenderSectionAsync("Messages", required: false)
        @await RenderBodyAsync()
    </main>

    <footer class="bg-light text-center py-3 mt-4">
        <p>© Yours Truly - @Site.SiteName</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
